<!DOCTYPE html>
<html>

  
<%- include("./partials/head.ejs")  %>

  <body>
    <!-- Navbar (sit on top) -->
    
    <%- include("./partials/navBar.ejs")  %>

    <!-- Header -->
    
    <%- include("./partials/header.ejs")  %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <h1 class="ps-center"><%= plato.titulo %> </h1>
          <h2 class="ps-center"><%= plato.descripcion %> </h2>

          
          <br />
          <h4><%= plato.descripcionDetallada %></h4>
          <p class="ps-text-grey">
            U$S <%= plato.precio.toFixed(2) %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/<%= plato.imagen %>"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      
      
      <%- include("./partials/footer.ejs")  %>

    </div>
  </body>
</html>
